<resources>

    <!-- Base application theme. -->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="themeBackground">@color/white</item>
        <item name="themeTextColor">@color/black</item>
        <item name="actionMenuTextColor">#ffffff</item>
    </style>

    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="themeBackground">@color/gray</item>
        <item name="themeTextColor">@color/red</item>
        <item name="actionMenuTextColor">#ffffff</item>
    </style>



    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
